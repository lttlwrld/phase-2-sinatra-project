<h2>New Project</h2>

<form action="/projects/new" method="post">
    <br>Name: <input type="text" name="name" id="name"><br>
    <br>
    <label for="developer">Developer:</label>
    <select name="developer">
        <option value=''>--Select or Create--</option>
        <% Developer.all.each do |dev| %>
            <option value="<%= dev.id %>"><%= dev.name %></option>
        <% end %>
    </select>
    <br>
    <br>Create New Developer: <input type="text" name="new_developer" id="new_developer"><br>
    <br>
    <label for="proj_type">Type:</label>
    <select name="proj_type">
        <option selected disabled hidden style='display: none' value=''>--Select--</option>
        <% Project.types.each do |type| %>
            <option value="<%= type %>"><%= type %></option>
        <% end %>
    </select>
    <br>
    <br>Description: <input type="text" name="description" id="description"><br>
    <br><input type="submit" id="submit "value="Create Project">
</form>